{
    "version": 2,
    "framework": null,

    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.6.0" }
    },

    "rewrites": [{ "source": "/(.*)", "destination": "/index.php" }],

    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Credentials", "value": "true" },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://majordomus-tasker.vercel.app"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,OPTIONS,DELETE,POST,PUT"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "X-CSRF-Token, X-XSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
                }
            ]
        },
        {
            "source": "/sanctum/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Credentials", "value": "true" },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://majordomus-tasker.vercel.app"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,OPTIONS,DELETE,POST,PUT"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "X-CSRF-Token, X-XSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
                }
            ]
        }
    ]
}
